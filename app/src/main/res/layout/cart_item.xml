<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="@dimen/material_emphasis_medium"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/delete_product_button"
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:background="@drawable/rounded_corner"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/delete_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cart_product_img"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/cart_product_img"
            app:layout_constraintTop_toTopOf="@+id/cart_product_img"
            app:layout_constraintVertical_bias="0.932" />

        <ImageView
            android:id="@+id/cart_product_img"
            android:layout_width="92dp"
            android:layout_height="124dp"
            android:background="@drawable/cart_item_background"
            android:scaleType="fitXY"
            android:src="@drawable/fridge1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/product_title_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="5dp"
            android:text="@string/Lorem_ispum"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cart_product_img"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/LL2"
            android:layout_width="342dp"
            android:layout_height="44dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/cart_product_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cart_product_img"
            app:layout_constraintTop_toBottomOf="@+id/product_title_cart"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/product_price_cart_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/button_decrease_cart_page"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:background="@drawable/mins_btn"
                android:padding="10dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/text_quantity_cart_page"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/quantity_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/button_increase_cart_page"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/plus_btn"
                android:padding="10dp"
                android:scaleType="centerInside" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>